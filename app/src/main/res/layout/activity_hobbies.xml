<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f9f1e4"
    android:padding="16dp">

    <!-- Header Section (Back Button & Logo) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backForm3Button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Back button"
            android:src="@drawable/baseline_arrow_back_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-30dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/imagine" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp">


        <EditText
            android:id="@+id/Hobbies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginEnd="10dp"
            android:hint="Hobbies: "
            android:padding="14dp"
            android:textColor="@color/white"
            android:textColorHint="#8A8A8A"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/WhoInspiresYouTheMost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:hint="Who Inspires You The Most:"
            android:padding="14dp"
            android:textColor="@color/white"
            android:textColorHint="#8A8A8A"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/YourBiggestFear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginEnd="10dp"
            android:hint="Your Biggest Fear:"
            android:padding="14dp"
            android:textColor="@color/white"
            android:textColorHint="#8A8A8A"
            android:textSize="13sp" />


        <EditText
            android:id="@+id/WhatMakesYouHappy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:layout_marginEnd="10dp"
            android:hint="What Makes You Happy:"
            android:padding="14dp"
            android:textColor="@color/white"
            android:textColorHint="#8A8A8A"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/YourDreamDestination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:hint= "Your Dream Destination:"
            android:padding="14dp"
            android:textColor="@color/white"
            android:textColorHint="#8A8A8A"
            android:textSize="13sp" />

        <EditText
            android:id="@+id/WhatsYourLuckyNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edit_text_background"
            android:hint= "Whatâ€™s Your Lucky Number?:"
            android:padding="14dp"
            android:textColor="@color/white"
            android:textColorHint="#8A8A8A"
            android:textSize="13sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_marginStart="90dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:backgroundTint="#3F2F9E"
        android:textColor="#FFFFFF" />
</LinearLayout>
